<div class="titleLogin">
    <h3>Số Lượng Thiết Bị Còn</h3>
</div>
<div class="container">
    
    <div class="row">
        <div class="panel-body col-md-12">
            <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Tên Thiết Bị</th>
                        <th scope="col">Tủ</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each rest}}
                    <tr>
                        <td>{{name_device}}</td>
                        <td>{{name_shelf}}</td>
                    </tr>
                     {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panigation ">
                    <a href="?page={{prev}}" {{#if can_go_prev}} 
                    style="display: none;"{{/if}}><i class="fa fa-chevron-left " aria-hidden="true" style="
                        font-size:20px"></i></a>
                    {{#each pages_item}}
                    {{#if isActive}}
                    <a href="?page={{value}}" class="pages active" style="background-color:#2fb4c1;
                        font-size:20px; border-radius: 50px;"> 
                    {{value}} </a>
                    {{else}}
                    <a href="?page={{value}}" class="pages" style="
                        font-size:20px"> {{value}} </a>
                    {{/if}}

                    {{/each}}
                    <a href="?page={{next}}" {{#if can_go_next}}
                    style="display: none;"{{/if}}><i class="fa fa-chevron-right" aria-hidden="true" style="
                        font-size:20px"></i></a>
                </div>
        </div>
    </div>
</div>