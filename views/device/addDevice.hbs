<div class="titleLogin">
    <h3>Thêm dụng cụ</h3>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="formAddDevice">
                <form>
                    <div class="form-group">
                        <label for="name_device">Tên dụng cụ</label>
                        <input type="text" class="form-control" id="name_device" placeholder="Nhập tên...">
                    </div>
                    <div class="form-group">
                        <label for="avatar_device">Hình ảnh</label>
                        <input type="text" class="form-control" id="avatar_device" placeholder="Nhập tên...">
                    </div>
                    <div class="form-group">
                        <label for="kind_device">Loại dụng cụ</label>
                        <select class="custom-select" id="kind_device_sl">
                            <option selected>Chọn...</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="RFID">RFID</label>
                        <input type="text" class="form-control" id="length_device" placeholder="Nhập độ dài...">
                    </div>
                    <div class="form-group">
                        <label for="position_device">Vị trí</label> <br>
                        <button class="btn btn-outline-dark  w-100">Chọn vị trí</button>
                    </div>
                    <div class="bottom_form">
                        <input type="submit" value="Thên dụng cụ">
                    </div>

                </form>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>